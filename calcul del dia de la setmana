        var resultado = algoritmo(dia, mes, anyo);

        

        // Mostrar dia de la semana

        

        if (resultado == 0){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es domingo!");

        }else if (resultado == 1){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es lunes!");

        } else if (resultado == 2){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es martes!");

        }else if (resultado  == 3){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es miércoles!");

        }else if (resultado  == 4){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es jueves!");

        }else if (resultado  == 5){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es viernes!");

        }else if (resultado  == 6){

            alert("¡El día "+ dia + " de "+mes+ " de " + anyo + " es sábado!");

        }

        

